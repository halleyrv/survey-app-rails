<div id="<%= dom_id evaluation %>" class="border-2 w-9/12 mx-auto flex h-40 rounded-lg shadow-lg p-2 my-5">
  <div class="w-40">
    <%= image_tag("Upload.png", class: "object-fit h-full w-full") %>
  </div>
  <div class="w-full p-5">
    <p>
      Name:
      <strong class="font-semibold">
        <%= evaluation.name %> HEY
      </strong>
    </p>

    <p>
      Description:
      <strong class="font-semibold">
      <%= evaluation.description %>
      </strong>
    </p>

    <p>
      User:
      <strong class="font-semibold">
      <%= evaluation.user_id %>
      </strong>
    </p>
    <div>
      <%= button_to evaluation_path(evaluation), method: :get do %>
        <div class="rounded-lg bg-evaluationStrong px-5 py-2 text-white text-sm font-semibold">
          Show evaluation
        </div>
      <% end %>  
    </div>
  </div>


</div>
