<%= form_with(model: @chapter, url: url, data: { controller: "reset", action: "submit->reset#resetForm"}) do |f|%>
  
  <div class="flex flex-col py-4">
    <%= f.label :name, class: "text-white font-semibold" %>
    <%= f.text_field :name, class: "p-2 rounded-lg font-semibold" %>
  </div>

   <div class="flex flex-col py-4">
    <%= f.label :description, class: "text-white font-semibold" %>
    <%= f.text_field :description, class: "p-2 rounded-lg font-semibold" %>
  </div>

  <div class="flex  py-2 justify-end gap-5">
    <span class="bg-chapterStrong p-2 rounded-lg">
      <%= f.submit  'Save chapter', class: "text-white font-semibold" %>
    </span>
    <span class="bg-removeIcon p-2 rounded-lg">
      <%= link_to "cancel", :back, class:"text-white font-sembibold" %>
    </span>  
  </div>
<% end %>